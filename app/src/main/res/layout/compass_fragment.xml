<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#37B899"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="286dp"
        android:id="@+id/ivMechet"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_path_mechet"/>

    <TextClock
        android:id="@+id/tvDateClock"
        android:layout_marginTop="80dp"
        android:text="3:34"
        android:textColor="@color/white"
        android:textSize="55dp"
        android:format24Hour="hh:mm aa"
        android:format12Hour="@null"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/ivMechet"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvDate"
        android:text="4.28.2021"
        android:textColor="@color/white"
        android:textSize="21dp"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDateClock"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvRegion"
        android:text="Nukus, Qaraqalpaqstan"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDate"
        android:layout_height="wrap_content"/>

    <ImageView
        app:layout_constraintEnd_toStartOf="@id/tvRegion"
        app:layout_constraintTop_toTopOf="@id/tvRegion"
        app:layout_constraintBottom_toBottomOf="@id/tvRegion"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ic_baseline_location_on_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Кубла"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/tvDateClock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"/>


    <!--    <androidx.constraintlayout.widget.Guideline-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:id="@+id/gd1"-->
    <!--        android:layout_height="match_parent"-->
    <!--        android:orientation="horizontal"-->
    <!--        app:layout_constraintGuide_percent="0.4"/>-->

    <ImageView
        app:layout_constraintTop_toBottomOf="@id/ivMechet"
        android:layout_width="match_parent"
        android:id="@+id/ivBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp"
        android:src="@drawable/background_for_compass"/>

    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/ivCompass"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/compass"
        app:layout_constraintTop_toTopOf="@id/ivBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/ivStrelka"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="@id/ivCompass"
        app:layout_constraintEnd_toEndOf="@id/ivCompass"
        app:layout_constraintTop_toTopOf="@id/ivCompass"
        app:layout_constraintBottom_toBottomOf="@id/ivCompass"
        android:src="@drawable/ic_strelka"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tvDegree"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:text="x"
        app:layout_constraintTop_toBottomOf="@id/ivMechet"/>

</androidx.constraintlayout.widget.ConstraintLayout>